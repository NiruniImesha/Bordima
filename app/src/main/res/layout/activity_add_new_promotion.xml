<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewPromotionActivity">

    <TextView
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeNoteNewPromotion"
        android:textColor="@color/colorPrimary"
        android:text="Add New Promotion"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/inputPromotionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeNoteNewPromotion"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:hint="Promotion Name"
        android:inputType="text"
        android:padding="14dp" />

    <EditText
        android:id="@+id/inputPromotionLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPromotionName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:hint="Promotion Image Link"
        android:inputType="text"
        android:padding="14dp" />


    <Button
        android:id="@+id/BtnPromotionSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputPromotionLink"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>